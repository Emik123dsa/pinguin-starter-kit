{
  "projectType": "application",
  "root": "apps/jira-client",
  "sourceRoot": "apps/jira-client/src",
  "prefix": "pinguin",
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "en": {
        "translation": "apps/jira-client/src/locale/messages.en.xlf",
        "baseHref": "/"
      },
      "de": {
        "translation": "apps/jira-client/src/locale/messages.de.xlf",
        "baseHref": "/"
      },
      "ru": {
        "translation": "apps/jira-client/src/locale/messages.ru.xlf",
        "baseHref": "/"
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@angular-builders/custom-webpack:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "indexTransform": "tools/index-html-transform.ts",
        "outputPath": "dist/jira-client/browser",
        "index": "apps/jira-client/src/index.html",
        "main": "apps/jira-client/src/main.ts",
        "polyfills": "apps/jira-client/src/polyfills.ts",
        "tsConfig": "apps/jira-client/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/jira-client/src/favicon.ico",
          "apps/jira-client/src/assets",
          "apps/jira-client/src/manifest.webmanifest"
        ],
        "stylePreprocessorOptions": {
          "includePaths": ["apps/jira-client/src/assets/stylesheets"]
        },
        "optimization": {
          "scripts": true,
          "styles": {
            "minify": true,
            "inlineCritical": true
          },
          "fonts": true
        },
        "styles": [
          "apps/jira-client/src/styles.scss",
          {
            "input": "apps/jira-client/src/modules/global/tailwindcss/tailwindcss-module.scss",
            "inject": false,
            "bundleName": "tailwindcss-module"
          }
        ],
        "scripts": [],
        "serviceWorker": true,
        "ngswConfigPath": "apps/jira-client/ngsw-config.json",
        "webWorkerTsConfig": "apps/jira-client/tsconfig.worker.json",
        "i18nMissingTranslation": "warning",
        "localize": [
          "en"
          /**
           * TODO: resolve issues with localize translation.
           * #Example:
           * ["de", "ru"]
           */
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/jira-client/src/environments/environment.ts",
              "with": "apps/jira-client/src/environments/environment.prod.ts"
            }
          ],

          "outputHashing": "all",
          "extractLicenses": true
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "hmr": {
          "fileReplacements": [
            {
              "replace": "apps/jira-client/src/environments/environment.ts",
              "with": "apps/jira-client/src/environments/environment.hmr.ts"
            }
          ]
        },
        "mock": {
          "fileReplacements": [
            {
              "replace": "apps/jira-client/src/environments/environment.ts",
              "with": "apps/jira-client/src/environments/environment.mock.ts"
            }
          ]
        },
        "i18n-en": {
          "baseHref": "/",
          "localize": ["en"],
          "outputPath": "dist/jira-client/browser",
          "i18nMissingTranslation": "error"
        },
        "i18n-de": {
          "baseHref": "/",
          "localize": ["de"],
          "outputPath": "dist/jira-client/browser",
          "i18nMissingTranslation": "error"
        },
        "i18n-ru": {
          "baseHref": "/",
          "localize": ["ru"],
          "outputPath": "dist/jira-client/browser",
          "i18nMissingTranslation": "error"
        }
      },
      "defaultConfiguration": "production"
    },
    "xliffmerge": {
      "executor": "@ngx-i18nsupport/tooling:xliffmerge",
      "options": {
        "xliffmergeOptions": {
          "i18nFormat": "xlf",
          "srcDir": "apps/jira-client/src/locale",
          "genDir": "apps/jira-client/src/locale",
          "verbose": true,
          "defaultLanguage": "en",
          "autotranslate": ["en"],
          "apikey": "i18n",
          "languages": [
            "en"
            /**
             * TODO: resolve issues with localize translation.
             * #Example:
             * ["de", "ru"]
             */
          ]
        }
      }
    },
    "serve": {
      "executor": "@angular-builders/custom-webpack:dev-server",
      "options": {},
      "configurations": {
        "production": {
          "browserTarget": "jira-client:build:production",
          "proxyConfig": "apps/jira-client/src/proxy.conf.json"
        },
        "development": {
          "browserTarget": "jira-client:build:development",
          "proxyConfig": "apps/jira-client/src/proxy.conf.json"
        },
        "hmr": {
          "browserTarget": "jira-client:build:hmr",
          "hmr": true,
          "proxyConfig": "apps/jira-client/src/proxy.conf.json"
        },
        "mock": {
          "browserTarget": "jira-client:build:mock"
        },
        "i18n-en": {
          "browserTarget": "jira-client:build:i18n-en",
          "proxyConfig": "apps/jira-client/src/proxy.conf.json"
        },
        "i18n-de": {
          "browserTarget": "jira-client:build:i18n-de",
          "proxyConfig": "apps/jira-client/src/proxy.conf.json"
        },
        "i18n-ru": {
          "browserTarget": "jira-client:build:i18n-ru",
          "proxyConfig": "apps/jira-client/src/proxy.conf.json"
        }
      },
      "defaultConfiguration": "development"
    },
    "serve:ssr": {
      "executor": "@nguniversal/builders:ssr-dev-server",
      "configurations": {
        "development": {
          "browserTarget": "jira-client:build:development",
          "serverTarget": "jira-client:server:development"
        },
        "production": {
          "browserTarget": "jira-client:build:production",
          "serverTarget": "jira-client:server:production",
          "proxyConfig": "apps/jira-client/src/proxy.conf.json"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "jira-client:build",
        "progress": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/jira-client/src/**/*.ts",
          "apps/jira-client/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/jira-client"],
      "options": {
        "jestConfig": "apps/jira-client/jest.config.js",
        "passWithNoTests": true,
        "webWorkerTsConfig": "apps/jira-client/tsconfig.worker.json"
      }
    },
    "server": {
      "executor": "@angular-devkit/build-angular:server",
      "options": {
        "outputPath": "dist/jira-client/server",
        "main": "apps/jira-client/src/ssr.server.ts",
        "tsConfig": "apps/jira-client/tsconfig.server.json",
        "stylePreprocessorOptions": {
          "includePaths": ["apps/jira-client/src/assets/stylesheets"]
        },
        "inlineStyleLanguage": "scss"
      },
      "configurations": {
        "production": {
          "outputHashing": "media",
          "statsJson": true,
          "fileReplacements": [
            {
              "replace": "apps/jira-client/src/environments/environment.ts",
              "with": "apps/jira-client/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": {
            "styles": true,
            "scripts": true
          },
          "sourceMap": true,
          "extractLicenses": false
        },
        "hmr": {
          "fileReplacements": [
            {
              "replace": "apps/jira-client/src/environments/environment.ts",
              "with": "apps/jira-client/src/environments/environment.hmr.ts"
            }
          ]
        },
        "mock": {
          "fileReplacements": [
            {
              "replace": "apps/jira-client/src/environments/environment.ts",
              "with": "apps/jira-client/src/environments/environment.mock.ts"
            }
          ]
        },
        "i18n-en": {
          "localize": ["en"],
          "outputPath": "dist/jira-client/browser",
          "i18nMissingTranslation": "error"
        },
        "i18n-de": {
          "localize": ["de"],
          "outputPath": "dist/jira-client/browser",
          "i18nMissingTranslation": "error"
        },
        "i18n-ru": {
          "localize": ["ru"],
          "outputPath": "dist/jira-client/browser",
          "i18nMissingTranslation": "error"
        }
      },
      "defaultConfiguration": "production"
    }
  },
  "tags": []
}
