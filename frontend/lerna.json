{
  "packages": ["libs/*"],
  "version": "independent",
  "stream": true,
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "yes": true
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
